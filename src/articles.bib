@inproceedings{chuSCARLETNASBridgingGap2021,
  title = {{{SCARLET-NAS}}: {{Bridging}} the {{Gap}} between {{Stability}} and {{Scalability}} in {{Weight-sharing Neural Architecture Search}}},
